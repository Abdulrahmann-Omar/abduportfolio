---
const { items, className = '' } = Astro.props;
---

<div class={`relative ${className}`}>
  {/* Timeline line */}
  <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-matrix-green/30 md:left-1/2"></div>
  
  <div class="space-y-12">
    {items.map((item, index) => (
      <div class="relative pl-12 md:pl-0 md:grid md:grid-cols-2 md:gap-8">
        {/* Left side (or right side for even items) */}
        <div class:list={[
          'relative pb-12 md:pb-20',
          index % 2 === 0 ? 'md:text-right md:pr-12' : 'md:pl-12 md:col-start-2'
        ]}>
          {/* Date */}
          <div class="text-sm font-semibold text-matrix-green mb-1">
            {item.date}
          </div>
          
          {/* Title */}
          <h3 class="text-xl font-bold text-white mb-2">
            {item.title}
          </h3>
          
          {/* Company */}
          <div class="text-lg text-gray-300 mb-3">
            {item.company}
          </div>
          
          {/* Description */}
          <p class="text-gray-400">
            {item.description}
          </p>
          
          {/* Tags */}
          {item.tags && item.tags.length > 0 && (
            <div class="mt-4 flex flex-wrap gap-2">
              {item.tags.map(tag => (
                <span class="px-3 py-1 text-xs font-medium bg-matrix-green/10 text-matrix-green rounded-full">
                  {tag}
                </span>
              ))}
            </div>
          )}
          
          {/* Timeline dot */}
          <div class="absolute left-0 -top-10 w-8 h-8 rounded-full bg-matrix-dark border-4 border-matrix-green flex items-center justify-center md:left-1/2 md:-ml-4">
            <div class="w-2 h-2 rounded-full bg-matrix-green"></div>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
